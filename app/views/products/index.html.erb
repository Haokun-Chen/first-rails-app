        <h3 class="product_name"><%= product.name %></h3>
        <p><%= product.description %></p>
        <h4>Color: <%= product.colour %></h4>
        <h4><strong>$ <%= number_with_precision(product.price, :precision => 2) %></strong></h4>
        <p><%= link_to 'Show', product %> <%= link_to 'Edit', edit_product_path(product) %>
